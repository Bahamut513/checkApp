<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课堂签到系统"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 状态显示 -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态: 准备就绪"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="#E3F2FD"
            android:layout_marginBottom="16dp" />

        <!-- 课程信息 -->
        <TextView
            android:id="@+id/tv_current_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正在查找当前课程..."
            android:textSize="16sp"
            android:padding="16dp"
            android:background="#E8F5E9"
            android:layout_marginBottom="24dp" />

        <!-- 第一部分：微信相关功能 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信相关功能"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 跳转到微信考勤小程序 -->
        <Button
            android:id="@+id/btn_wechat_mini_program"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转到微信考勤小程序"
            android:textSize="16sp"
            android:backgroundTint="#07C160"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- 测试小程序演示 -->
        <Button
            android:id="@+id/btn_test_mini_program"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试小程序演示"
            android:textSize="16sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- 打开微信APP -->
        <Button
            android:id="@+id/btn_open_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开微信APP"
            android:textSize="16sp"
            android:backgroundTint="#07C160"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- 第二部分：学习通相关功能 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="学习通相关功能"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 打开学习通APP -->
        <Button
            android:id="@+id/btn_open_chaoxing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开学习通APP"
            android:textSize="16sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- 说明区域 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用说明：\n1. 微信考勤小程序：跳转到学校的考勤系统\n2. 测试小程序：演示跳转功能\n3. 打开微信：直接启动微信客户端\n4. 学习通APP：打开学习通客户端测试模式说明】\n\n✅ 当前使用微信官方测试小程序\n✅ 个人开发者无需特殊权限\n✅ 完整演示技术实现流程\n\n技术验证已完成：\n• 微信SDK集成 ✓\n• 小程序跳转逻辑 ✓\n• 回调处理机制 ✓\n• 错误处理流程 ✓\n\n点击上方按钮将跳转到微信测试小程序"
            android:textSize="14sp"
            android:padding="16dp"
            android:background="#F5F5F5"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>