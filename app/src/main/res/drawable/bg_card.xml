<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 卡片背景色（可替换为自己的颜色，如 @color/white） -->
    <solid android:color="@color/white" />
    <!-- 卡片圆角（常用8dp/12dp，根据设计调整） -->
    <corners android:radius="12dp" />
    <!-- 可选：卡片描边（若需要） -->
    <stroke
        android:width="1dp"
        android:color="@color/gray_ef" />
    <!-- 可选：卡片内边距（避免内容贴边） -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>